<%= render "/shared/content_title", title: "Create New Category" %>

<% if @category.errors.any? %>
  <div class="row">
    <div class="alert alert-error span8">
      <h5>Whoops! Looks like you missed something...</h5>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit(@category.new_record? ? "Create Category" : "Submit Changes", class: "btn btn-primary") %>
  <% end %>
</div>
